{
  "openapi": "3.0.0",
  "info": {
    "title": "NirKyy API",
    "version": "1.0.0",
    "description": "API Documentation for Developers",
    "contact": {
      "name": "NirKyy",
      "url": "https://wa.me/6283894391287"
    }
  },
  "servers": [
    {
      "url": "/api"
    }
  ],
  "tags": [
    {
      "name": "Main",
      "description": "Main endpoints"
    },
    {
      "name": "Spotify",
      "description": "Spotify related endpoints"
    }
  ],
  "paths": {
    "/main/ping": {
      "get": {
        "tags": ["Main"],
        "summary": "Ping the API",
        "description": "Returns an 'ok' status if the API is running.",
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    },
                    "message": {
                      "type": "string",
                      "example": "pong"
                    },
                    "author": {
                      "type": "string",
                      "example": "NirKyy"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/spotify/track": {
      "get": {
        "tags": ["Spotify"],
        "summary": "Download a Spotify track",
        "description": "Downloads a track from Spotify and returns a direct download link.",
        "parameters": [
          {
            "name": "url",
            "in": "query",
            "required": true,
            "description": "The URL of the Spotify track to download.",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "artist": {
                      "type": "string"
                    },
                    "duration": {
                      "type": "string"
                    },
                    "image": {
                      "type": "string"
                    },
                    "spotifyUrl": {
                      "type": "string"
                    },
                    "downloadUrl": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing track URL"
          },
          "500": {
            "description": "Failed to download track"
          }
        }
      }
    }
  }
}